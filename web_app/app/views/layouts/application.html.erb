<!DOCTYPE html>
<html>
  <head>
    <title>Gane Mercando</title>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <% if request.ssl? %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <% else %>
    <%= stylesheet_link_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js' %>
  <% end %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>
  </head>
  <body>
  <!-- nav bar -->
  <nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Gane Mercando', root_path, class: 'navbar-brand'  %>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li>        
          <%= link_to 'dashboard', dashboard_path%>
        </li>
        <li>        
          <%= link_to edit_user_registration_path do %>
            <span class="glyphicon glyphicon-user"></span> Hola <%= current_user.first_name %>
          <% end %>
        </li>
        <li>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li>        
          <%= link_to new_user_registration_path do %>
            <span class="glyphicon glyphicon-log-in"></span> Sign up
          <% end %>
        </li>
        <li>
          <%= link_to  new_user_session_path do %>
            <span class="glyphicon glyphicon-user"></span> Sign in
          <% end %>
        </li>
      <% end %>
      <li>
        <%= render 'layouts/cart_text' %>
      </li>
    </ul>
  </div>
</nav>
    <%= yield %>
  </body>
</html>
